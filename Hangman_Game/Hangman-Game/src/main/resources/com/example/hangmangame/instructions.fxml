<VBox alignment="CENTER" prefHeight="366.0" prefWidth="824.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hangmangame.Instructions">
   <children>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="887.0" style="-fx-background-color: #32a4a8; -fx-alignment: CENTER;">
         <children>
            <Label alignment="CENTER" text="How to play : ">
               <font>
                  <Font name="Arial Black" size="36.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </Label>
         </children>
      </VBox>
      <GridPane gridLinesVisible="true" prefHeight="500.0" prefWidth="200.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="439.0" minWidth="10.0" prefWidth="176.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="711.0" minWidth="10.0" prefWidth="711.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
