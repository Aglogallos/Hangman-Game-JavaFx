        </rowConstraints>
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: #6f8c8f;">
               <children>
                  <Label text="Step 1 :">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1">
               <children>
                  <Label text="Visit the website openlibrary.org and pick your favourite book">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <Label text="(it needs to have a considerable size of description because gamewords will be generated from that)" />
               </children>
               <effect>
                  <Bloom />
               </effect>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: #6f8c8f;" GridPane.rowIndex="2">
               <children>
                  <Label text="Step 3 :">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <children>
                  <Label text="Load the dictionary you desire from the Load Window">
                     <font>
                        <Font size="24.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Label>
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: #6f8c8f;" GridPane.rowIndex="3">
               <children>
                  <Label text="Step 4 : ">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
               <children>
                  <Label text="Click Start">
                     <font>
                        <Font name="Serif Regular" size="32.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <children>
                  <Label text="Copy the book code displayed in the URL (ex.OL31390631M)">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <Label text=" and paste it in the Create Window">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: #6f8c8f;" GridPane.rowIndex="1">
               <children>
                  <Label text="Step 2 : ">
                     <font>
                        <Font size="24.0" />
